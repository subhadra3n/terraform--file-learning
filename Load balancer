protocol = "HTTP"

default_action {
type ="forward"
target_group_arn = aws_lb_targer_group.front_end.arn
}
}

resource "aws_lb_target_group" "front_end"{
name = "front-end-lb-tg"
port =3000
protocol = "HTTP"
